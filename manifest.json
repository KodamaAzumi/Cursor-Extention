{
    "content_scripts": [
     {
       "matches": ["<all_urls>"],
       "js": ["js/content-script.js", "js/p5.min.js"],
       "css": ["css/style.css"]
     }
   ],

    "name": "カーソルが大きくなる拡張機能",
    "description" : "サイトを訪れるたびにカーソルが大きくなります。ポップアップから大きさをリセットすることができます。",
    "version": "1.0",
    "manifest_version": 3,

    "action": {
      "default_popup": "../html/popup.html"
    },
    "permissions": ["storage"],
    "web_accessible_resources": [{
      "resources": [
        "images/*.png", "images/*.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }]
  }